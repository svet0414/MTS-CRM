        <Label Content="Password:" HorizontalAlignment="Left" Margin="372,106,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="usernameTXT" HorizontalAlignment="Left" Height="24" Margin="439,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="passwordTXT" HorizontalAlignment="Left" Margin="439,110,0,0" VerticalAlignment="Top" Width="120" Height="22" KeyUp="passwordTXT_KeyUp"/>
        <DatePicker x:Name="datePickerTXT" HorizontalAlignment="Left" Margin="121,169,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="passwordNeedsLBL" Content="Password needs at least:" HorizontalAlignment="Left" Margin="439,137,0,0" VerticalAlignment="Top" FontSize="10" Visibility="Hidden"/>
        <Label x:Name="oneNoLBL" Content="&#x2022; 1 number" HorizontalAlignment="Left" Margin="439,149,0,0" VerticalAlignment="Top" FontSize="10" Visibility="Hidden"/>
        <Label x:Name="fiveCharactersLBL" Content="&#x2022; No less than 5 charecters" HorizontalAlignment="Left" Margin="439,173,0,0" VerticalAlignment="Top" FontSize="10" Visibility="Hidden"/>
        <Label x:Name="oneUpperCaseLBL" Content="&#x2022; 1 Upper Case" HorizontalAlignment="Left" Margin="439,161,0,0" VerticalAlignment="Top" FontSize="10" Visibility="Hidden"/>
