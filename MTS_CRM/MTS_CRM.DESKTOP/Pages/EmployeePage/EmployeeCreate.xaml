        <Label x:Name="phoneNumberLabel" Content="Phone Number:" HorizontalAlignment="Left" Margin="23,199,0,0" VerticalAlignment="Top"/>
        <Label x:Name="positionLabel" Content="Position:" HorizontalAlignment="Left" Margin="61,230,0,0" VerticalAlignment="Top"/>
