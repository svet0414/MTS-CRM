        <TextBox x:Name="emailTXT" HorizontalAlignment="Left" Height="23" Margin="121,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="firstNameTXT" HorizontalAlignment="Left" Height="23" Margin="121,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
